{
  "name": "qr-code-generator-desktop",
  "version": "1.0.20",
  "description": "An application created for a friend. Based on the electron platform. The generator offers:\n* Preview how the QR code changes when entering text\n* Write to the PNG file generated QR code\n* Changing the image size before saving\n",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 0",
    "deploy": "electron-builder --linux --win -p always",
    "pack": "electron-builder --dir",
    "release": "electron-builder -p always"
  },
  "author": "Studio La Cosa Nostra <studiolacosanostra@gmail.com>",
  "license": "ISC",
  "repository": "https://github.com/studioLaCosaNostra/qr-code-generator-desktop",
  "dependencies": {},
  "devDependencies": {
    "electron": "^4.1.0",
    "electron-builder": "^20.39.0"
  },
  "build": {
    "appId": "com.qrCodeGenerator",
    "publish": [
      {
        "provider": "github"
      }
    ],
    "linux": {
      "category": "Utility",
      "target": [
        {
          "target": "AppImage"
        },
        {
          "target": "deb"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "portable"
        },
        {
          "target": "nsis"
        }
      ]
    },
    "directories": {
      "output": "release-builds"
    }
  }
}
